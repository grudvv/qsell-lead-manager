{
    "name": "qsell/lead-manager",
    "description": "QSell Lead Manager - Zaawansowany system zarzÄ…dzania leadami z Meta Ads webhook, systemem wycen i generowaniem PDF",
    "type": "project",
    "keywords": ["lead-management", "meta-ads", "quotes", "pdf-generation", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "QSell Team",
            "email": "info@qsell.pl",
            "homepage": "https://qsell.pl"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "ext-gd": "*",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "QSell\\": "src/"
        },
        "files": [
            "backend/config.php",
            "backend/database.php",
            "backend/quotes.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "QSell\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "post-install-cmd": [
            "php -r \"if (!is_dir('logs')) mkdir('logs', 0755, true);\"",
            "php -r \"if (!is_dir('quotes')) mkdir('quotes', 0755, true);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    }
}
